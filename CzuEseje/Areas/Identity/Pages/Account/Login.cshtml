@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid px-0 py-4 m-0">
    <div class="container">
        <div class="pb-3 text-center">
            <h3 class="h1 text-uppercase text-headline mt-md-4 mb-md-3">Přihlášení</h3>
        </div>

        <form id="account" method="post" autocomplete="on">
            <div class="row">
                <div class="col-8 col-md-7 col-lg-5 col-xl-4 mx-auto">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>

            <!-- Email -->
            <div class="row">
                <div class="col-8 col-md-7 col-lg-5 col-xl-4 mx-auto">
                    <div class="form-group">
                        <label asp-for="Input.Email" class="text-dark pl-2 pl-md-4" for="email">E-mail:</label>
                        <input asp-for="Input.Email" class=" form-control border-dark" id="email" autocomplete="current-password" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <!-- Password -->
            <div class="row">
                <div class="col-8 col-md-7 col-lg-5 col-xl-4 mx-auto">
                    <div class="form-group">
                        <label asp-for="Input.Password" class="text-dark pl-2 pl-md-4" for="email">Heslo:</label>
                        <input asp-for="Input.Password" class="form-control border-dark" id="passwd" autocomplete="current-password"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-8 col-md-7 col-lg-5 col-xl-4 mx-auto">
                    <div class="form-group mb-1">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="text-body stay-signed-in">
                                <input asp-for="Input.RememberMe" />
                                Zůstat přihlášen
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            
            <!-- Button-->
            <div class="row mb-5">
                <div class="col-md-4 offset-md-4 text-center d-flex flex-column">
                    <button type="submit" class="btn btn-primary text-light mt-2 mx-auto">Přihlásit se</button>
                    <div class="pt-4 pb-0">
                        <a id="forgot-password" href="/ZapomenuteHeslo" class="link-default forgotten-password">Zapomněli jste heslo?</a>
                    </div>
                    <p class="form-text text-muted mt-3">Ještě nemáte účet? <a class="link-default" href="/Registrace">Zaregistrujte se.</a></p>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
