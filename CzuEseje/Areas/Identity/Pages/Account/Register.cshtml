@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="container-fluid px-0 py-4 m-0">
    <div class="container">
        <div class="pb-3">
            <h3 class="h1 text-uppercase text-headline text-center my-md-4">Registrace</h3>
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <!-- First part of the login form -->
            <div class="px-md-5">
                <!-- Name and Surname -->
                <div class="row">
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label class="text-dark pl-2 pl-md-4" asp-for="Input.FirstName">Křestní jméno:</label>
                            <input asp-for="Input.FirstName" class="form-control border-dark" id="firstName" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="text-dark pl-2 pl-md-4" asp-for="Input.LastName">Přijmení:</label>
                            <input asp-for="Input.LastName" class="form-control border-dark" id="lastName" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Email & Phone number -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="text-dark pl-2 pl-md-4" asp-for="Input.Email">Přihlašovací e-mail:</label>
                            <input asp-for="Input.Email" class="form-control border-dark" id="email" />
                            @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                            @if (TempData["UsedEmail"] != null)
                            {
                                <span class="text-danger">Účet s tímto emailem již existuje</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Password -->
                <div class="row">
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label class="text-dark pl-2 pl-md-4" asp-for="Input.Password">Heslo:</label>
                            <input asp-for="Input.Password" class="form-control border-dark" id="passwd" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword" class="text-dark pl-2 pl-md-4">Potvrzení hesla:</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control border-dark" id="passwdConf" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>


            
            <div class="row mb-5">
                <div class="col-md-4 offset-md-4 text-center">
                    <button type="submit" class="btn btn-primary text-light mt-4">Zaregistrovat se</button>
                    <p class="form-text text-muted mt-3">Už u nás máte účet? <a class="link-default" asp-action="Index" asp-controller="Ucet">Přihlaste se.</a></p>
                </div>
            </div>
        </form>
    </div>
</div>
