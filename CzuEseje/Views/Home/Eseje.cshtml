<div class="admin-news-container">
    
    
    <div class="container-fluid px-4 d-flex flex-column">
        <div class="d-flex mx-auto pt-2 pb-4">
            <h2 class="text-center">Eseje</h2>
        </div>
         <div class="admin-add d-flex flex-row">
                <a asp-action="AddPost" asp-controller="Admin" class="btn-primary my-auto d-block">Přidat ESEJ</a>
            </div>
        
        <div class="row">
            @foreach (CzuEseje.Models.Esej item in Model)
            {
                <div class="col-12 col-lg-6 my-4">
                    <div class="px-3">
                        <div class="py-4 px-4 dropshadow-default d-flex flex-column">
                            <div>
                                <div class="border-bottom">
                                    <a asp-action="Post" asp-controller="Admin" asp-route-id="@item.Id">
                                        <h4 class="h3">@item.Title</h4></a>
                            
                                </div>
                                <div class="text-body pt-3 pb-3 article-admin-content">
                                    TESTSTSTSTST
                                </div>
                            </div>

                            <div class="d-flex flex-row justify-content-between pt-4 pb-2 border-top">
                                <div class="d-flex flex-row justify-content-start">
                                    <div class="pr-2">
                                        <a asp-action="Edit" asp-controller="Esej" asp-route-id="@item.Id"
                                            class="d-block btn-primary">Upravit</a>
                                    </div>

                                    <div class="px-2 d-flex">
                                        <a asp-action="ShowPrispevek" asp-controller="Ucet" asp-route-id="@item.Id"
                                            class="link-default m-auto">Zobrazit</a>
                                    </div>
                                </div>
                                <div class="pr-2 d-flex flex-row">
                                    <a class="admin-news-delete d-block mr-3" 
                                        asp-action="ArchivePost" asp-controller="Admin" asp-route-id="@item.Id">
                                        <img src="~/images/icons/archive.svg" alt="Ikona" class="img-fluid h-100">
                                    </a>
                                        
                                    <a onclick="deletePost(@item.Id)"
                                        class="admin-news-delete d-block">
                                        <img src="~/images/icons/delete.svg" alt="Ikona" class="img-fluid h-100">
                                    </a>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>



    </div>

</div>